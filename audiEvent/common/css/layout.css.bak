/* 모든 Device를 위한 공통 로드 */
header{width:100%;min-width:994px; background:#000;}
#container{position:relative;width:100%;min-width:994px; margin-bottom: 80px;}
footer{width:100%;min-width:994px; position: absolute; }

/*헤더*/
header .w{  position: relative;  width: 1249px;  margin: 0 auto;  padding-left: 5px;  padding-right: 5px;  border-left: 1px solid #3a3a3a;}

header .topArea{ border-bottom: 1px solid #3a3a3a;}
header .topArea ul{  float: right;  border-left: 1px solid #3a3a3a;}
header .topArea ul.pc{overflow:hidden;font-size:0.75em;float: right;}
header .topArea ul.pc > li{float:left;width:143px;margin-left:-1px;}
header .topArea ul.pc > li.last{width:142px;}
header .topArea ul.pc > li > a{position:relative;display:block;height:70px;line-height:66px;text-align:center;font-weight:bold;border-left:1px solid #3a3a3a;border-right:1px solid #3a3a3a;color:#fff}
header .topArea ul.pc > li > a:hover,header .topArea ul.pc > li > a:focus,header .topArea ul.pc > li > a.on{z-index:1;text-decoration:none}
header .topArea ul.pc > li.w01 > a:hover,header .topArea ul.pc > li.w01 > a:focus,header .topArea ul.pc > li.w01 > a.on{color:red;}
header .topArea ul.pc > li.w02 > a:hover,header .topArea ul.pc > li.w02 > a:focus,header .topArea ul.pc > li.w02 > a.on{color:red;}
header .topArea ul.pc > li.w03 > a:hover,header .topArea ul.pc > li.w03 > a:focus,header .topArea ul.pc > li.w03 > a.on{color:red;}

header .midArea{height:95px;border-bottom:1px solid #c3c3c3;background:#fff;}
header .midArea h1{position:absolute;left:0;top:30px;width:118px;}
header .midArea h1 img{width:100%;}
header .midArea .gnb{overflow:hidden}
header .midArea .gnb .gnbw > ul{position:absolute;z-index:99;right:0;top:50px;}
header .midArea .gnb .gnbw > ul > li{float:left;margin-left:16px;}
header .midArea .gnb .gnbw > ul > li.home{display:none;}
header .midArea .gnb .gnbw > ul > li > a{color:#000;font-weight:bold;text-decoration:none}
header.sub01 .gnb .gnbw > ul > li > a.on{color:#117daa}
header.sub02 .gnb .gnbw > ul > li > a.on{color:#e1285a}
header.sub03 .gnb .gnbw > ul > li > a.on{color:#986e0b}
header.sub04 .gnb .gnbw > ul > li > a.on{color:#3e7f00}
header .midArea .gnb ul.depth2{position:absolute;display:none;padding:35px 0 8px 0;}
header .midArea .gnb ul.depth2 > li{float:left;margin-right:15px;font-size:0.8em;}
header .midArea .gnb ul.depth2 > li.last{margin-right:0;}
header .midArea .gnb ul.depth2 > li > a{color:#fff;font-weight:bold;}
header .midArea .user{position:absolute;right:0;top:15px;}
header .midArea .user ul{overflow:hidden}
header .midArea .user ul li{float:left;margin-left:8px;font-size:0.75em;letter-spacing:-1px;}
header .midArea .user ul li.font{padding-left:19px;background:url('../img/main/txtcontBg.png') left center no-repeat}
header .midArea .user ul li.font > a{display:inline-block;height:15px;vertical-align:middle;background:url('../img/main/btn_txtControl.png') no-repeat}
header .midArea .user ul li.font > a.zoom{width:18px;background-position:0 0}
header .midArea .user ul li.font > a.default{width:16px;background-position:-18px 0}
header .midArea .user ul li.font > a.out{width:18px;background-position:-34px 0}
header .midArea > .btn_map{display:none;position:absolute;left:0;top:0;width:65px;height:65px;background:#ae1932 url('../img/common/btn_Map.png') center center no-repeat;background-size:70% auto}
header .midArea > .btn_quick{display:none;position:absolute;left:65px;top:0;width:65px;height:65px;border-right:1px solid #b2b2b2;background:url('../img/intro/btn_Arrow.png') center center no-repeat;background-size:50% auto}
header .midArea > .btn_menu{display:none;position:absolute;right:0;top:0;width:65px;height:65px;border-left:1px solid #b2b2b2;border-right:1px solid #b2b2b2;background:url('../img/intro/btn_Menu.png') center center no-repeat;background-size:50% auto}

header .mapViewPop{display:none}

header .gnbBg{position:absolute;display:none;z-index:98;width:100%;height:35px;}
header.sub01 .gnbBg{background-color:#117daa}
header.sub02 .gnbBg{background-color:#e1285a}
header.sub03 .gnbBg{background-color:#986e0b}
header.sub04 .gnbBg{background-color:#3e7f00}


/*footer*/
footer .wrap{width:994px;height:75px;margin:0 auto;padding-top:23px;color:#737373}
footer .wrap a{color:#737373}
footer .logo{display:block;width:137px;height:50px;float:left;margin-right:26px;background:url('../img/common/footerLogo.png') no-repeat}
footer .fotBox{overflow:hidden}
footer .cust{overflow:hidden;margin:-2px 0 5px 0;font-size:11px;}
footer .cust li{font-weight:bold;float:left;padding:0 10px 0 6px;background:url('../img/intro/customLine.png') right center no-repeat}
footer .cust li.first{padding-left:0;}
footer .cust li.first > a{color:#ae1932}
footer .cust li.last{padding-right:0;background:none}
footer .inforw{font-size:11px;line-height:1.4em;font-weight:bold;word-break:break-word}


footer .userWrap{  width: 1240px;  height: 30px;  margin: 0 auto;  border: 1px solid #a3a3a3;position: relative;}
footer .userWrap > .w{max-width:800px;padding:10px 0;margin:0 auto}
footer .userWrap ul{overflow:hidden; margin-top:3px;}
footer .userWrap ul > li{  float: left;  text-align: center;  margin-left: 3px;}
footer .userWrap ul > .uw_link{   color: #fff;  margin-left: 30px;  border-left: 1px solid #fff;  padding-left: 20px; font-size: 13px;}
footer .userWrap ul > .uw_link.first{border:none;}
footer .userWrap ul > .uw_copyright{  color: #888;  font-size: 11px;  line-height: 213%;  margin-left: 33px;}
footer .userWrap ul > li:first-child{margin-left:20px;}
footer .userWrap ul > li > a{display:block;color:#fff}
footer .AudiTronLink{  position: absolute;  right: 0px;  width: 260px;  height: 30px;  background: #16171b;  top: 0px;}
footer .AudiTronLink ul{width:260px; height:30px; overflow:hidden;   margin-top: 0px;}
footer .AudiTronLink ul li{float:left; width:130px; height:30px; margin-left: 0px !important;}



/*관리자표시*/
.admExp{overflow:hidden;margin-top:100px;border:1px solid #c4c4c4;font-size:12px;background-color:#f7f7f7;}
.admExp .l{float:left;padding:12px 0 12px 15px;}
.admExp .r{float:right;padding:12px 15px;border-left:1px solid #c4c4c4;}
.admExp .line{padding:0 6px;color:#c4c4c4;}
.admExp img{vertical-align:middle;}

